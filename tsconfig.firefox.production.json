{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "declaration": false,
    "outDir": "./dist/temp",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/extension/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/scripts/**/*",
    "src/test/**/*",
    "src/types/**/*"
  ]
}